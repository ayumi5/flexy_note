= simple_form_for @note, html: { class: "form-horizontal note" }, 
  wrapper: :horizontal_form do |f|                                
  = f.input :title
  = f.input :category, :url => autocomplete_note_category_notes_path, :as => :autocomplete, input_html: { class: 'form-control' }
  = f.input :content, label: 'Note', input_html: { rows: 8 }
  = f.input :url, as: :url
  .create-note-buttons
    = f.button :submit, class: 'create-note'
    = link_to t('.cancel', :default => t("helpers.links.cancel")),
      notes_path, :class => 'btn btn-default cancel'              
