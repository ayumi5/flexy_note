- model_class = Note
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:title)
      \:
  %dd= @note.title
  %dt
    %strong
      = model_class.human_attribute_name(:category)
      \:
  %dd= @note.category
  %dt
    %strong
      = model_class.human_attribute_name(:content)
      \:
  %dd= @note.content
  %dt
    %strong
      = model_class.human_attribute_name(:url)
      \:
  %dd= link_to @note.url, @note.url
= link_to t('.back', :default => t("helpers.links.back")), 
  notes_path, :class => 'btn btn-default'                  
= link_to t('.edit', :default => t("helpers.links.edit")), 
  edit_note_path(@note), :class => 'btn btn-default'       
= link_to t('.destroy', :default => t("helpers.links.destroy")),                                               
  note_path(@note),                                                                                            
  :method => 'delete',                                                                                         
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, 
  :class => 'btn btn-danger'                                                                                   
