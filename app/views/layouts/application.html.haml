!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    - base_path = ''
    - base_path << Rails.application.config.assets.prefix unless Rails.env.production?
    - base_path << asset_path('alloy-editor/')
    %script
      console.log("#{base_path}")
      //var CKEDITOR_BASEPATH = "#{base_path}";
      var CKEDITOR_BASEPATH = 'https://morning-stream-6277.herokuapp.com/assets/alloy-editor/';
    %title FlexyNote
    = favicon_link_tag '/flexy-chan.jpg'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body{'data-controller' => "#{controller_name}", 'data-action' => "#{action_name}"}
    = yield
